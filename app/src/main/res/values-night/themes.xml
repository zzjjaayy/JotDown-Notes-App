<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TODOApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="OnBoardingTheme">
        <item name="android:fontFamily">@font/now_regular</item>
        <item name="android:backgroundTint">@color/light_cyan</item>
    </style>
    <style name="FabTheme">
        <item name="android:backgroundTint">@color/light_cyan</item>
        <item name="iconTint">@color/dark_blue</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="tint">@color/dark_blue</item>
    </style>
    <style name="chipTheme">
        <item name="chipBackgroundColor">@color/light_cyan</item>
        <item name="android:textColor">@color/dark_blue_lighter</item>
        <item name="chipIconTint">@color/dark_blue_lighter</item>
    </style>
    <style name="noDataIconTheme">
        <item name="android:tint">@color/light_cyan</item>
    </style>
    <style name="sectionDividerTheme">
        <item name="android:background">@color/light_cyan</item>
    </style>
</resources>